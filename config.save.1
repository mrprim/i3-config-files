set $mod Mod4
set $browser google-chrome
set $text subl
set $music spotify
set $mail thunderbird
set $chat pidgin

set $black       #212121
set $darkblack   #000000
set $red         #fb4934
set $darkred     #cc241d
set $green       #b8bb26
set $darkgreen   #98971a
set $yellow      #fabd2f
set $darkyellow  #d79921
set $blue        #83a598
set $darkblue    #458588
set $magenta     #d3869b
set $darkmagenta #b16286
set $cyan        #80cbc4
set $darkcyan    #689d6a
set $white       #ffffff
set $darkwhite   #a89984
set $transparent #1d202100

font pango: Monospace 9
new_window 1pixel
#                       BORDER          BACKGROUND        TEXT            INDICATOR 
client.focused          $cyan           $transparent      $white          $cyan         $cyan
client.unfocused        $transparent    $transparent      $darkblue       $transparent  
client.focused_inactive $transparent    $transparent      $darkblue       $transparent
